<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.body, length: 80) %></td>
        <td><%= link_to "Show", post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New post", new_post_path %>